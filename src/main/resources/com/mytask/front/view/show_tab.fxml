<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ListView?>
<VBox xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/19"
      fx:controller="com.mytask.front.controller.ShowTabController"
      spacing="20" alignment="CENTER">
    <HBox spacing="20" alignment="CENTER">
        <VBox spacing="10">
            <Label fx:id="tablesLabel"/>
            <ScrollPane>
                <ListView fx:id="tablesListView"/>
            </ScrollPane>
            <Button fx:id="backToMenuBtn"/>
        </VBox>

        <VBox spacing="10" fx:id="tableInfoVBox">
            <HBox spacing="10">
                <Button fx:id="generateInviteCodeBtn"/>
                <Button fx:id="viewMembersBtn"/>
            </HBox>
            <HBox>
                <Label fx:id="tableTitleLabel"/>
                <Label fx:id="tableShareCodeLabel"/>
            </HBox>
            <Label fx:id="tableDescriptionLabel"/>

            <HBox>
                <VBox fx:id="todoColumn" spacing="10">
                    <Label fx:id="todoLabel"/>
                    <ScrollPane>
                        <VBox fx:id="todoTasksList"/>
                    </ScrollPane>
                </VBox>
                <VBox fx:id="inProgressColumn" spacing="10">
                    <Label fx:id="inProgressLabel"/>
                    <ScrollPane>
                        <VBox fx:id="inProgressTasksList"/>
                    </ScrollPane>
                </VBox>
                <VBox fx:id="doneColumn" spacing="10">
                    <Label fx:id="doneLabel"/>
                    <ScrollPane>
                        <VBox fx:id="doneTasksList"/>
                    </ScrollPane>
                </VBox>
            </HBox>
        </VBox>
    </HBox>
</VBox>